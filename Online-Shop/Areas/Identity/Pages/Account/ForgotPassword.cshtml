@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="col-md-4" style="margin-right:auto; margin-left:auto; text-align:center">
<h1>@ViewData["Title"]</h1>

<h4>Enter your email.</h4>
<hr />
<div class="row">
    <div class="col-md-8" style="margin-right:auto; margin-left:auto; text-align:center">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="button button-contactForm boxed-btn">Submit</button>
        </form>
    </div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
